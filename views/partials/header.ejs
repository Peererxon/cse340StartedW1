<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <!-- eslint-disable -->
  <% if (locals.loggedin == 1) { %>
  <div class="tools">
    <a href="/inv">Go to management view</a>
  </div>
  <div class="tools">
    <p>
      welcome <%- locals.accountData.account_firstname%> <%-
      locals.accountData.account_lastname %> !
    </p>
    <form action="/account/logout" method="post">
      <button type="submit" href="/account/logout">Log Out</button>
    </form>
  </div>
  <% } %> <% if (locals.loggedin == 0) { %>
  <div class="tools">
    <a title="Click to log in" href="/account/login">My Account</a>
  </div>
  <% } %>
</header>
